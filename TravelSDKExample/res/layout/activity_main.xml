<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <Button
	            android:id="@+id/buttonFlightSearch"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Flight Seach" />
	        <Button
	            android:id="@+id/buttonHotelSearch"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Hotel Search" />
	        <Button
	            android:id="@+id/buttonRentacarSearch"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Rentacar Search" />
	        <Button
	            android:id="@+id/buttonExcursionSearch"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Excursion Search" />
	        <Button
	            android:id="@+id/buttonBasket"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Basket" />
	        <Button
	            android:id="@+id/buttonBookings"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="My bookings" />	
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>
