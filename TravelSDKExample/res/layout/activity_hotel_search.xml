<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HotelSearchActivity" 
    android:orientation="vertical">

 		<!-- Destination -->

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination" />

        <Button
            android:id="@+id/buttonDestination"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="..." />

        <!-- Check in date -->

		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check in date: " />

		<Button
		    android:id="@+id/buttonCheckInDate"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />


        <!-- Check out Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check out date:" />
        
		<Button
		    android:id="@+id/buttonCheckOutDate"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
		
		<!-- Adults -->
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adults:" />
		<Button
		    android:id="@+id/buttonAdults"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="1"/>	
		    
		<!-- Min category -->
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum category" />
		<Button
		    android:id="@+id/buttonMinCategory"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="Any"/>		
		    
		
		<Button
		    android:id="@+id/buttonSearch"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="Search"/>	

</LinearLayout>
